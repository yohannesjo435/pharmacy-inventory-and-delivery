generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PHARMACY
  CUSTOMER
  SUPPLIER
  DRIVER
  MANAGER
}

model User {
  id            String    @id
  name          String
  email         String
  phoneNumber   Int       @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          Role      @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  orders        Order[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Pharmacy {
  id          String   @id
  name        String
  address     String
  city        String
  phoneNumber Int      @unique
  licenseNo   String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  products  Product[]
  suppliers Supplier[]

  @@map("pharmacy")
}

model Supplier {
  id          String     @id
  name        String
  address     String
  city        String
  phoneNumber Int        @unique
  licenseNo   String?    @unique
  pharmacy    Pharmacy[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt

  @@map("supplier")
}

model Product {
  id                     String   @id
  name                   String
  description            String?
  price                  Float
  quantity               Int
  imagePath              String
  isAvailableForPurchase Boolean  @default(true)
  pharmacy               Pharmacy @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)
  pharmacyId             String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @default(now()) @updatedAt
  orders                 Order[]

  @@map("product")
}

model Order {
  id               String   @id @default(uuid())
  pricePaidInCents Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  userId    String
  productId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}
